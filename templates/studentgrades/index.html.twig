{% extends "./base.html.twig" %}

{% block body %}

<div class="w-4/5 m-auto pt-40">
    <h1 class="text-6xl  pb-12">
        add a grade
    </h1>
    

    {{ form_start(add_grade) }}

        {{ form_widget(add_grade) }}
        <br><br>
        <button    
            type="submit"
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
            Add
        </button>

       
       
            <a 
                href="/grades" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                see all grades
            </a>
    

    {{ form_end(add_grade) }}
</div>
{% endblock %}