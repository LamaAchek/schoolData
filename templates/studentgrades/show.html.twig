{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                list of grades 
            </h1>
            <form method="GET" action="{{ path('filter_grades') }}">
            <input type="submit" class="btn btn-warning" value="Find student">
            <input name = "studentid">
            </input>
            <br>
            <br>
            </form>
            <form method="GET" action="{{ path('filter_grades_classes') }}">
            <input type="submit" class="btn btn-warning" value="Find by class">
            <input name = "classid">
            </input>
            <br>
             <br>
             </form>

             <form method="GET" action="{{ path('filter_grades_course') }}">
            <input type="submit" class="btn btn-warning" value="Find by course">
            <input name = "courseid">
            </input>
            <br>
            
            </form>
        </div>
    </div>


    
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for stud in grades %}
            <div class="text-center pt-8 pb-4">
                
                {% for c in stud.Studentid %}
                    Student: {{ c.id() }}
                    <br>
                {% endfor %}

                {% for c in stud.Courseid %}
                    Course: {{ c.id() }}
                    <br>
                {% endfor %}
                

                {% for c in stud.Classid %}
                    Class: {{ c.id() }}
                    <br>
                {% endfor %}
                Grade: {{ stud.getGrades() }}
                
                
            </div>
        {% endfor %}

    </div>

        <br><br>
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/addgrade" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                Add a new Grade
            </a>
        </div>

{% endblock %}