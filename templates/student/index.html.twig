{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                list of students  ({{ student|length }})
            </h1>
            <form method="GET" action="{{ path('filter_students') }}">
            <input type="submit" class="btn btn-warning" value="Find by first name">
            <input name = "first_name" >
            </input>
            <br>
            <br>
            <input type="submit" class="btn btn-warning" value="Find by last name">
            <input name = "last_name">
            </input>
            <br>
            <br>
            </form>
            <form method="GET" action="{{ path('filter_students_classes') }}">
            <input type="submit" class="btn btn-warning" value="Find by class">
            <input name = "classid">
            </input>
            <br>
             <br>
             </form>

             <form method="GET" action="{{ path('filter_students_course') }}">
            <input type="submit" class="btn btn-warning" value="Find by course">
            <input name = "courseid">
            </input>
            <br>
            
            </form>
        </div>
    </div>


    
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for stud in student %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ stud.getImagepath() }}"
                    class="shadow-xl rounded-md"
                >

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ stud.getFirstname() }}
                    {{ stud.getLastname() }}
                </h2>

                <br><br>
                <a href="/students/{{ stud.getId() }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    more information
                </a>
            </div>
        {% endfor %}

    </div>

        <br><br>
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/addstudent" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                Add a new student
            </a>
        </div>
    <div class="container">
        <div class="row">
        <div class="d-flex align-items-center justify-content-center">
            {{ knp_pagination_render(student) }}
        </div>
        </div>
        </div>

        

{% endblock %}